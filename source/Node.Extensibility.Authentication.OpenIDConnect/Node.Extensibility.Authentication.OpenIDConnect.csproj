<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;net451</TargetFrameworks>
    <AssemblyName>Octopus.Node.Extensibility.Authentication.OpenIdConnect</AssemblyName>
    <RootNamespace>Octopus.Node.Extensibility.Authentication.OpenIdConnect</RootNamespace>
    <PostBuildEvent>xcopy "$(TargetDir)*.IdentityModel.Tokens*.dll" "C:\ProgramData\Octopus\CustomExtensions" /S /Y /I /D
xcopy "$(TargetDir)*OpenIDConnect.dll" "C:\ProgramData\Octopus\CustomExtensions" /S /Y /I /D</PostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.6.0" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
    <PackageReference Include="Octopus.Data" Version="1.0.24" />
    <PackageReference Include="Octopus.Diagnostics" Version="1.0.12" />
    <PackageReference Include="Octopus.Node.Extensibility" Version="3.0.1-enh-odcm0012" />
    <PackageReference Include="Octopus.Node.Extensibility.Authentication" Version="4.0.10-enh-odcm0012" />
    <PackageReference Include="Octopus.Time" Version="1.0.9" />
    <PackageReference Include="System.Net.Http" Version="4.3.0" />
 </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <PackageReference Include="System.Security.Claims">
      <Version>4.3.0</Version>
    </PackageReference>
  </ItemGroup>

</Project>
