<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net451</TargetFramework>
    <RootNamespace>Octopus.Server.Extensibility.Authentication.OpenIdConnect</RootNamespace>
    <AssemblyName>Octopus.Server.Extensibility.Authentication.OpenIdConnect</AssemblyName>
    <Description>Octopus Deploy: Extensibility.Authentication.OpenIdConnect</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Tokens\**" />
    <EmbeddedResource Remove="Tokens\**" />
    <None Remove="Tokens\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.6.0" />
    <PackageReference Include="Microsoft.CSharp" Version="4.3.0" />
    <PackageReference Include="Nancy" Version="1.2.0" />
    <PackageReference Include="Nancy.Serialization.JsonNet" Version="1.2.0" />
    <PackageReference Include="Octopus.Data" Version="1.0.24" />
    <PackageReference Include="Octopus.Node.Extensibility" Version="3.0.0-enh-odcm0014" />
    <PackageReference Include="Octopus.Node.Extensibility.Authentication" Version="4.0.0-enh-odcm0014" />
    <PackageReference Include="Octopus.Server.Extensibility" Version="3.0.0-enh-odcm0014" />
    <PackageReference Include="Octopus.Server.Extensibility.Authentication" Version="4.0.0-enh-odcm0014" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="5.1.3" />
    <PackageReference Include="System.Net.Http" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Node.Extensibility.Authentication.OpenIDConnect\Node.Extensibility.Authentication.OpenIDConnect.csproj" />
  </ItemGroup>

  <Target Name="AfterBuildNet451" AfterTargets="Build">
    <Exec Command="xcopy $(OutputPath)*.IdentityModel.Tokens*.dll C:\ProgramData\Octopus\CustomExtensions /S /Y /I /D&#xD;&#xA;          xcopy $(OutputPath)*OpenIDConnect.dll C:\ProgramData\Octopus\CustomExtensions /S /Y /I /D" />
  </Target>
  </Project>
