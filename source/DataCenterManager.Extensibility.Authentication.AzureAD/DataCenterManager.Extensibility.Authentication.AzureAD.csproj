<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <RootNamespace>Octopus.DataCenterManager.Extensibility.Authentication.AzureAD</RootNamespace>
    <AssemblyName>Octopus.DataCenterManager.Extensibility.Authentication.AzureAD</AssemblyName>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Authors>Octopus Deploy</Authors>
    <PackageId>Octopus.DataCenterManager.Extensibility.Authentication.AzureAD</PackageId>
    <PackageIconUrl>http://i.octopusdeploy.com/resources/Avatar3_360.png</PackageIconUrl>
    <PackageLicenseUrl>https://octopus.com/</PackageLicenseUrl>
    <PackageProjectUrl>https://octopus.com/</PackageProjectUrl>
    <PostBuildEvent>
      xcopy "$(TargetDir)Octopus.DataCenterManager.Extensibility.Authentication.AzureAD.*" "C:\Octopus\DataCenterManager\CustomExtensions" /S /Y /I /D
    </PostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Web\Static\areas\users\azureAD_auth_provider.js" />
    <EmbeddedResource Include="Web\Static\images\microsoft_signin_buttons\microsoft-logo.svg" />
    <EmbeddedResource Include="Web\Static\styles\azureAD.css" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Octopus.DataCenterManager.Extensibility" Version="3.0.0-enh-odcm0023" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DataCenterManager.Extensibility.Authentication.OpenIDConnect\DataCenterManager.Extensibility.Authentication.OpenIDConnect.csproj" />
  </ItemGroup>

</Project>